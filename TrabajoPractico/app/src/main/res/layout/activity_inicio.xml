<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InicioActivity">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal|top"
        android:adjustViewBounds="false"
        android:cropToPadding="false"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenida"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:id="@+id/txtBienvenida"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/in_subtitulo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center"
        android:id="@+id/txtSubtitulo"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/usuarioEmail"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editUsuarioEmail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/in_usuarioClave"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editUsuarioClave"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_recodarme"
            android:id="@+id/chkRecordarme"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnRegistrarse"
                android:id="@+id/btnRegistrarse"
                android:textAllCaps="false"
                android:background="@color/colorBotones" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnIngresar"
                android:id="@+id/btnIngresar"
                android:textAllCaps="false"
                android:background="@color/colorBotones" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
